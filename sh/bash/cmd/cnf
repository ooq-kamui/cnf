#!/bin/bash

cnf_dir=~/wrk/cnf/sh/bash/cnf
#cnf_file_path=$cnf_dir/.bashrc
cnf_file_path=~/.bashrc_my_cloud9

cmdsub="$1"

if   test $cmdsub = 'cd'
then
  cd $cnf_dir

elif test $cmdsub = 'vi'
then
  cnf_ref_file_path=$cnf_dir/.bashrc

  vi -p $cnf_file_path $cnf_ref_file_path

elif test $cmdsub = 'src'
then
  src $cnf_file_path

elif test $cmdsub = 'slf'
then
  cmd_dir=~/wrk/cnf/sh/bash/cmd
  slf_path=$cmd_dir/cnf

  vi -p $slf_path

else
  echo "cmdsub : $cmdsub ?"
fi

